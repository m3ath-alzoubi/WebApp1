@model Projects
<form method="post">
    <div class="border">
        <div class="row">
            <h2 class="text-primary">Create Project</h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for=Name></label>
            <input asp-for=Name class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for=Description>URL</label>
            <input asp-for=Description class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn  form-control">Create</button>
            </div>
            <div class="col-6">
                <a asp-controller="Projects" asp-action="index" class="btn btn-secondary form-control">
                    back to list Projects
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}